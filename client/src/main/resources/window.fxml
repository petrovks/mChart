<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="geekbrains.mchart.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox fx:id="loginPanel">
        <TextField fx:id="usernameField" HBox.hgrow="ALWAYS" promptText="Укажите свой ник" />
        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="Пароль" />
        <Button text="Войти" onAction="#login"/>
        <Button text="Создать" onAction="#createNewUser"/>
    </HBox>
    <HBox fx:id="logoutPanel" alignment="CENTER_RIGHT">
        <Button text = "Выйти" onAction="#logout" />
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
    <TextArea fx:id="msgArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true" />
    <ListView fx:id="clientList" maxWidth="150" prefWidth="150" minWidth="150"/>
    </HBox>
    <HBox fx:id="msgPanel" visible="false" managed="false">
        <TextField fx:id="msgField" HBox.hgrow="ALWAYS" promptText="Введите сообщение" onAction="#sendMsg"/>
        <Button text="Отправить" onAction="#sendMsg"/>
    </HBox>
</VBox>